<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="#3D81A3"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:background="#00924B4B" />


        <EditText
            android:id="@+id/input_field"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginBottom="40dp"
            android:hint="@string/search_anything"
            android:inputType="text"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textColorHighlight="#FFFCFC"
            android:textColorLink="#FCFFFFFF"
            android:textCursorDrawable="@android:color/background_dark"
            android:textIsSelectable="false"
            android:textSize="32sp"
            android:visibility="visible" />

        <Spinner
            android:id="@+id/category"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/search_btn"
            style="@android:style/Widget.Material.Button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/search"
            android:textSize="22dp"
            android:textColorHighlight="#2196F3"
            android:textColorLink="#8BC34A" />


    </LinearLayout>

</layout>